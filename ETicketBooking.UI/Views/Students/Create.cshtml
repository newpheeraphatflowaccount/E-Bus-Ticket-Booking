@model ETicketBooking.UI.ViewModels.CreateStudentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.SubjectList.Count; i++)
            { 
                <input type="hidden" asp-for="@Model.SubjectList[i].Id"/>
				<input asp-for="@Model.SubjectList[i].IsChecked" />
				@Model.SubjectList[i].Text
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
